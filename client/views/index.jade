doctype 
html
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		// Page title set in pageTitle directive
		title(page-title='')
		// Bootstrap and Fonts
		link(href='css/bootstrap.min.css', rel='stylesheet')
		|     
		link(href='font-awesome/css/font-awesome.css', rel='stylesheet')
		// Main Inspinia CSS files
		link(href='css/animate.css', rel='stylesheet')
		|     
		link(href='css/style.css', rel='stylesheet')
		// ControllerAs syntax
		// Main controller with serveral data used in Inspinia theme on diferent view
	body(ng-controller='MainCtrl as main')
		// Wrapper
		#wrapper
			// Navigation
			div(ng-include="'partials/common/navigation'")
			// Page wraper
			// ng-class with current state name give you the ability to extended customization your view
			#page-wrapper.gray-bg(class='{{$state.current.name}}')
				// Page wrapper
				div(ng-include="'partials/common/topnavbar'")
				// Main view
				div(ui-view='')
				// Footer
				div(ng-include="'partials/common/footer'")
			// End page wrapper
		// End wrapper
		// jQuery and Bootstrap
		script(src='components/jquery/jquery-2.1.1.min.js')
		script(src='components/plugins/jquery-ui/jquery-ui.js')
		script(src='components/bootstrap/bootstrap.min.js')
		// MetsiMenu
		script(src='components/plugins/metisMenu/jquery.metisMenu.js')
		// Peace JS
		script(src='components/plugins/pace/pace.min.js')
		// SlimScroll
		script(src='components/plugins/slimscroll/jquery.slimscroll.min.js')
		// Custom and plugin javascript
		script(src='components/inspina/inspina.js')

		// RequireJS entry point
		script(src='bower_components/requirejs/require.js', data-main="js/dependencies.js")