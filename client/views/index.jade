doctype 
html(ng-app='inspinia')
head
	meta(charset='utf-8')
	meta(name='viewport', content='width=device-width, initial-scale=1.0')
	// Page title set in pageTitle directive
	title(page-title='')
	// Bootstrap and Fonts
	link(href='css/bootstrap.min.css', rel='stylesheet')
	|     
	link(href='font-awesome/css/font-awesome.css', rel='stylesheet')
	// Main Inspinia CSS files
	link(href='css/animate.css', rel='stylesheet')
	|     
	link(href='css/style.css', rel='stylesheet')
	// ControllerAs syntax
	// Main controller with serveral data used in Inspinia theme on diferent view
	body(ng-controller='MainCtrl as main')
		// Wrapper
		#wrapper
			// Navigation
			div(ng-include="'partials/common/navigation'")
			// Page wraper
			// ng-class with current state name give you the ability to extended customization your view
			#page-wrapper.gray-bg(class='{{$state.current.name}}')
				// Page wrapper
				div(ng-include="'partials/common/topnavbar'")
				// Main view
				div(ui-view='')
				// Footer
				div(ng-include="'partials/common/footer'")
			// End page wrapper
		// End wrapper
		// jQuery and Bootstrap
		script(src='js/jquery/jquery-2.1.1.min.js')
		script(src='js/plugins/jquery-ui/jquery-ui.js')
		script(src='js/bootstrap/bootstrap.min.js')
		// MetsiMenu
		script(src='js/plugins/metisMenu/jquery.metisMenu.js')
		// Peace JS
		script(src='js/plugins/pace/pace.min.js')
		// SlimScroll
		script(src='js/plugins/slimscroll/jquery.slimscroll.min.js')
		// Custom and plugin javascript
		script(src='js/inspinia.js')
		// Angular scripts
		script(src='js/angular/angular.min.js')
		script(src='js/ui-router/angular-ui-router.min.js')
		script(src='js/bootstrap/ui-bootstrap-tpls-0.11.0.min.js')
		// Angular Dependiences
		// Anglar App Script
		script(src='js/app.js')
		script(src='js/inspinia-templates.js')
		script(src='js/config.js')
		script(src='js/directives.js')
		script(src='js/controllers.js')