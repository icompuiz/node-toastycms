doctype html
.col-xs-12
	.row.main-actions-area
		.col-xs-6
			div.btn-toolbar
				a.btn.btn-default(type="button", ng-click="refreshTree()")
					span.glyphicon.glyphicon-refresh
				a.btn.btn-default(type="button", ui-sref="management.authenticated.blocks.add")
					span.glyphicon.glyphicon-plus
					| &nbsp;Add Block
	.row
		.content-area-wrapper
			.col-xs-3.content-menu
				toasty-tree-explorer(data-t-api="blocks",data-t-opts="treeExplorerOpts", data-t-select="openNode(node)")
			.col-xs-9.content-area
				div.ui-blocks-body(ui-view="ui-blocks-body")