doctype html
form.form.toasty-form(name='addContentType', role="form")
	div.form-actions.pull-right
		div.btn-group.pull-right
			a.btn.btn-primary(ng-click="save()")
				span.glyphicon.glyphicon-save
				| &nbsp; Save
			a.btn.btn-danger(ng-click="delete()", ng-if="model._id")
				span.glyphicon.glyphicon-trash
				| &nbsp; Delete
			a.btn.btn-warning(ng-click="cancel()")
				span.glyphicon.glyphicon-save
				| &nbsp; Cancel
		.clearfix
	tabset
		tab(heading="Content")
			.form-group
				label(for='content-type-name') Name
				input.form-control(type="text", placeholder="Enter name", ng-model="model.name")
			.form-group
				label(for='content-type-name') Select Type
				div.content-type
					a.btn.btn-xs.btn-link(ng-click="selectContentType()") 
						| {{ contentType.name }}
		tab(heading="Properties")
			.form-group(ng-repeat="property in model.properties")
				label(for="{{property.name}}") {{property.name}}
				a.btn.btn-xs.btn-link(ng-click="removeProperty($index)")
					span.glyphicon.glyphicon-remove(style="color: red")
				toasty-input(data-t-property="property")
				hr