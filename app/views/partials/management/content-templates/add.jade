doctype html
form.form.toasty-form(name='addContentTemplate', role="form")
	div.form-actions.pull-right
		div.btn-group.pull-right
			a.btn.btn-primary(ng-click="save()")
				span.glyphicon.glyphicon-save
				| &nbsp; Save
			a.btn.btn-danger(ng-click="delete()", ng-if="model._id")
				span.glyphicon.glyphicon-trash
				| &nbsp; Delete
			a.btn.btn-warning(ng-click="cancel()")
				span.glyphicon.glyphicon-save
				| &nbsp; Cancel
		.clearfix
	tabset
		tab(heading="Template")
			.form-group
				label(for='content-type-name') Name
				input.form-control(type="text", placeholder="Enter name", ng-model="model.name")
			.form-group
				label(for='content-type-name') Parent
				a.btn.btn-xs.btn-link(ng-click="removeParent()", ng-show="parent._id")
					span.glyphicon.glyphicon-remove(style="color: red")
				div.parent-content
					a.btn.btn-xs.btn-link(ng-click="selectParentContentTemplate()") 
						| {{ parent.name }}
			.form-group
				label(for='content-template-name') Template
				textarea.form-control(ui-codemirror, ui-codemirror-opts="editorOptions", placeholder="Template Content", ng-model="model.text", rows="10")