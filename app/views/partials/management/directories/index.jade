doctype html
.col-xs-12
	.row.main-actions-area
		.col-xs-6
			div.btn-toolbar
				a.btn.btn-default(type="button", ng-click="refreshTree()")
					span.glyphicon.glyphicon-refresh
				a.btn.btn-default(type="button", ui-sref="management.authenticated.files.add")
					span.glyphicon.glyphicon-plus
					| &nbsp;Add Directory
	.row
		.content-area-wrapper
			.col-xs-3.content-menu
				toasty-tree-explorer(data-t-api="fs/directories", data-t-select="openNode(node)")
			.col-xs-9.content-area
				div.ui-files-body(ui-view="ui-files-body")