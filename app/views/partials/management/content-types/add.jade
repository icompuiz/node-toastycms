div.form-actions
	div.btn-group.pull-right
		a.btn.btn-primary
			span.glyphicon.glyphicon-save
			| &nbsp; Save
		a.btn.btn-danger
			span.glyphicon.glyphicon-save
			| &nbsp; Cancel
	.clearfix
form.form(name='addContentType', role="form")
	.form-group
		label(for='content-type-name') Name
		input.form-control(type="text", placeholder="Enter name")
	.form-group
		label(for='content-type-name') Select Template
		select.form-control
			option(value="1") Template 1
			option(value="2") Template 2
			option(value="3") Template 3

	.form-group
		tabset
			tab(heading="Type")
				| Type
			tab(heading="Properties")
				| Properties
