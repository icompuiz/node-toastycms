doctype html
.content-area-item
	div.form-actions
		div.btn-group
			a.btn.btn-sm.btn-primary(ng-click="save()")
				span.glyphicon.glyphicon-save
				| &nbsp; Save
			a.btn.btn-sm.btn-danger(ng-click="delete()", ng-if="model._id")
				span.glyphicon.glyphicon-trash
				| &nbsp; Delete
			a.btn.btn-sm.btn-warning(ng-click="cancel()")
				span.glyphicon.glyphicon-save
				| &nbsp; Cancel
		.clearfix
hr.ut-width-100.content-area-tools-menu-divider
.content-area-item
	form.form.toasty-form-wrapper(name='addContentType', role="form")
		tabset.toasty-form
			tab(heading="Type")
				.row
					.form-group.col-md-6
						label(for='content-type-name') Name
						input.form-control(type="text", placeholder="Enter name", ng-model="model.name")
				.row
					.form-group.col-md-6
						label(for='content-type-name') Parent
						a.btn.btn-xs.btn-link(ng-click="removeParent()", ng-show="parent._id")
							span.glyphicon.glyphicon-remove(style="color: red")
						div.parent-content
							a.btn.btn-xs.btn-link(ng-click="selectParentContentType()") 
								| {{ parent.name }}
					.form-group.col-md-6
						label(for='content-template-name') Select Template
						div.content-template
							a.btn.btn-xs.btn-link(ng-click="selectContentTemplate()") 
								| {{ contentTemplate.name }}
			tab(heading="Properties")
				.row
					.col-md-12
						.form-group
								table.table
									thead
										th(style="width:10px")
											a.btn.btn-xs.btn-link(ng-click="addProperty()")
												span.glyphicon.glyphicon-plus
										th Name
										th Format
									tbody
										tr(ng-repeat="property in model.properties")
											td
												a.btn.btn-xs.btn-link(ng-click="removeProperty($index)")
													span.glyphicon.glyphicon-trash(style="color: red")
											td 
												input.form-control(ng-model="property.name")
											td 
												select.form-control(ng-model="property.format")
													option(value="input-text", selected) Text
													option(value="input-textarea") Text Area
													option(value="input-richtext") Rich Text
													//- option(value="input-file") File Upload
													//- option(value="input-date") Date
													//- option(value="input-daterange") Date Range
