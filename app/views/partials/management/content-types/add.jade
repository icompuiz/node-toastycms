form.form.toasty-form(name='addContentType', role="form")
	div.form-actions.pull-right
		div.btn-group.pull-right
			a.btn.btn-primary
				span.glyphicon.glyphicon-save
				| &nbsp; Save
			a.btn.btn-danger
				span.glyphicon.glyphicon-save
				| &nbsp; Cancel
		.clearfix
	tabset
		tab(heading="Type")
			.form-group
				label(for='content-type-name') Name
				input.form-control(type="text", placeholder="Enter name")
			.form-group
				label(for='content-template-name') Select Template
				div.content-template
					a(ng-click="selectContentTemplate()") 
						| {{ contentTemplate.name }}
		tab(heading="Properties")
			| Properties